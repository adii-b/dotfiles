// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "git_panel": {
    "dock": "right"
  },
  "chat_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "right",
    "auto_fold_dirs": false
  },
  "notification_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right"
  },
  "icon_theme": "Catppuccin Mocha",
  "assistant": {
    "dock": "left",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "edit_predictions": {
    "mode": "subtle"
  },
  // "features": {
  //   "edit_prediction_provider": "zed"
  // },
  "base_keymap": "VSCode",
  "ui_font_size": 16,
  "ui_font_family": "Cartograph CF",
  "buffer_font_family": "Hasklug Nerd Font",
  "buffer_font_features": {
    "liga": true
  },
  "current_line_highlight": "gutter",
  "buffer_font_size": 18,
  "format_on_save": "on",
  "terminal": {
    "font_family": "Cartograph CF",
    "font_size": 17,
    "cursor_shape": "bar",
    "cursor_blink": true
  },
  "theme": {
    "mode": "dark",
    "light": "Catppuccin Mocha - No Italics",
    "dark": "Catppuccin Mocha - No Italics"
  },
  "languages": {
    "HTML": {
      "formatter": "prettier",
      "format_on_save": "on"
    },
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ],
      "format_on_save": "on"
    },
    "TypeScript": {
      "formatter": "prettier",
      "format_on_save": "on"
    },
    "JavaScript": {
      "formatter": "prettier",
      "format_on_save": "on"
    }
  }
}
